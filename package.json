{
  "name": "quizy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "dev": "next dev",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "db:generate": "drizzle-kit generate",
    "db:push:local": "npx wrangler d1 execute DB --local --file=$(ls ./src/db/migrations/*.sql | head -n 1)",
    "db:drop-all:local": "rm -rf .wrangler/state/v3/d1/*",
    "db:seed:static:local": "npx wrangler d1 execute DB --local --file=./src/db/seed.sql",
    "db:seed:test-user": "npx wrangler d1 execute DB --local --file=./src/db/migrations/0001_seed_test_user.sql",
    "db:seed:static:preview": "npx wrangler d1 execute DB --remote --preview --file=./src/db/seed.sql",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:full-reset:local": "pnpm db:drop-all:local && pnpm db:migrate:local && pnpm db:seed:static:local",
    "db:init:local": "pnpm db:migrate:local && pnpm db:seed:static:local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio:local": "NEXT_PUBLIC_WEBAPP_ENV=local drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio",
    "db:seed:local": "tsx scripts/seed-local.ts",
    "db:seed:prod": "wrangler d1 execute YOUR_DB_NAME --file=./src/db/migrations/seed.sql",
    "db:create": "wrangler d1 create quizy-db",
    "db:list": "wrangler d1 list",
    "db:execute": "wrangler d1 execute quizy-db",
    "db:console": "wrangler d1 console quizy-db",
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.10.0",
    "@hono/zod-validator": "^0.7.3",
    "@libsql/client": "^0.15.15",
    "@opennextjs/cloudflare": "^1.9.0",
    "@panva/hkdf": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@upstash/qstash-cli": "2.30.4",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.9",
    "jose": "^6.1.0",
    "lucide-react": "^0.544.0",
    "nanoid": "^5.1.6",
    "next": "15.5.4",
    "next-auth": "4.24.11",
    "next-intl": "^4.3.9",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "unpdf": "^1.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250927.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.40.2"
  }
}
